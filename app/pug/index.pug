doctype html

html(lang="ru")

block variables
	- var title = 'Самые высокие здания и сооружения'
	//-
		словарь для описания меню: элемент меню и название файла
	-
		var menu = { 'Главная': 'index.html',
			'Небоскребы' : "#",
			'Башни': "#",
			'Список': "#"
		}
	//-
		список файлов с рисунками для раздела сайта images
	-
		var listImages = ['image_1.jpg', 'image_2.jpg',
			'image_3.jpg', 'image_4.jpg', 'image_5.jpg']
	//-
		словарь для карточек (раздел section): заголовок, рисунок, текст
	-
		var listSections = [
			{'header' : 'Бурдж-Халифа в Дубае, ОАЭ',
			'image' : 'image_6.jpg',
			'text' : 'Небоскрёб высотой 828 метров, самое высокое сооружение в мире. Форма здания напоминает сталагмит.'
			},
			{'header' : 'Токийское небесное дерево, Япония',
			'image' : 'image_7.jpg',
			'text' : 'Телевизионная башня в районе Сумида самая высокая	среди телебашен мира. Высота телебашни вместе с антенной составляет 63 метра.'
			},
			{'header' : 'CN Tower, Канада',
			'image' : 'image_8.jpg',
			'text' : 'Си-Эн Тауэр — самое высокое свободно стоящее сооружение в мире с 1976 по 2007 год. Его высота составляет 553,33 метра.'
			}
		]

mixin createMenu(menu, active)
	each value, key in menu
		if active == key
			a.active(href= value)= key
		else
			a(href= value)= key

mixin createSection(item)
	h3= item.header
	img(src= "img/" + item.image)
	p= item.text
	a(href="#") &hellip;

head
	meta(charset="UTF-8")
	//meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
	link(rel="stylesheet", href="css/main.css")
	title #{title}

	body

	header
		h2= title

	nav
		+createMenu(menu, 'Главная')

	div.images
		each pict in listImages
			img(src= "img/" + pict)

	article
		each item in listSections
			section
				+createSection(item)

	footer
		h4 &copy; Пример html-страницы